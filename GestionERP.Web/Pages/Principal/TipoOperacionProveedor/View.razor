@page "/tipos-operacion-proveedor/{Id:guid}"

@attribute [Authorize] 
<PageTitle>Tipo de Operación Proveedor - Ver</PageTitle>

<TooltipButtonComponent/>

@if (TipoOperacionProveedorObtener is not null)
{
    <CardContainerComponent Titulo="Visualizando tipo de operación proveedor" CodigoRegistro="@(TipoOperacionProveedorObtener.Codigo)" CodigoServicio="@(codigoServicio)">
        <CardBody> 
            <TelerikForm Model="@TipoOperacionProveedorObtener" Size="sm"> 
                <FormItems>
                    <FormItem>
                        <Template>
                            <label>Activo:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@TipoOperacionProveedorObtener.Activo" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Nombre:</label> 
                            <TelerikTextBox @bind-Value="@(TipoOperacionProveedorObtener.Nombre)" Size="sm" Enabled="@false"/> 
                        </Template>
                    </FormItem>
                </FormItems>
                <FormButtons/>
            </TelerikForm>

            <TelerikToolBar Class="toolbar-mainform">
                <ToolBarTemplateItem>
                    <TelerikButton Icon="@(SvgIcon.Undo)" Id="tbtn" Title="Volver a la vista del listado" ButtonType="@ButtonType.Button" Size="sm" ThemeColor="primary" OnClick="@(Volver)">Volver</TelerikButton>
                </ToolBarTemplateItem> 
            </TelerikToolBar>

        </CardBody>
    </CardContainerComponent>
}