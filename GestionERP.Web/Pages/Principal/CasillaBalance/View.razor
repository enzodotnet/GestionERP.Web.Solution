@page "/casillas-balance/{Id:guid}"

@attribute [Authorize]

<PageTitle>Casilla Balance - Ver</PageTitle>

<TooltipButtonComponent/>

@if (CasillaBalanceObtener is not null)
{
    <CardContainerComponent Titulo="Visualizando casilla de balance" CodigoRegistro="@(CasillaBalanceObtener.Codigo)" CodigoServicio="@(codigoServicio)">
        <CardBody> 
            <TelerikForm Model="@CasillaBalanceObtener" Size="sm"> 
                <FormItems>
                    <FormItem>
                        <Template>
                            <label>Activo:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@CasillaBalanceObtener.Activo" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Nombre:</label> 
                            <TelerikTextBox @bind-Value="@(CasillaBalanceObtener.Nombre)" Size="sm" Enabled="@false"/> 
                        </Template>
                    </FormItem> 
                    <FormItem> 
                        <Template>
                            <label>Es activo fijo:</label> 
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@CasillaBalanceObtener.EsActivoFijo" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template> 
                    </FormItem>
                    <FormItem> 
                        <Template>
                            <label>Es pasivo patrimonio:</label> 
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@CasillaBalanceObtener.EsPasivoPatrimonio" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template> 
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Es ganancia y pérdida:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@CasillaBalanceObtener.EsGananciaPerdida" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md" />
                        </Template>
                    </FormItem>  
                </FormItems>
                <FormButtons/>
            </TelerikForm>

            <TelerikToolBar Class="toolbar-mainform">
                <ToolBarTemplateItem>
                    <TelerikButton Icon="@(SvgIcon.Undo)" Id="tbtn" Title="Volver a la vista del listado" ButtonType="@ButtonType.Button" Size="sm" ThemeColor="primary" OnClick="@(Volver)">Volver</TelerikButton>
                </ToolBarTemplateItem>
            </TelerikToolBar>
        </CardBody>
    </CardContainerComponent>
}