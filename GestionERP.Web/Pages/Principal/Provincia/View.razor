@page "/provincias/{Id:guid}"

@attribute [Authorize] 

<PageTitle>Provincia - Ver</PageTitle>

<TooltipButtonComponent/>

@if (ProvinciaObtener is not null)
{
    <CardContainerComponent Titulo="Visualizando provincia" CodigoRegistro="@(ProvinciaObtener.Codigo)" CodigoServicio="@(codigoServicio)">
        <CardBody> 
            <TelerikForm Model="@ProvinciaObtener" Size="sm"> 
                <FormItems>
                    <FormItem>
                        <Template>
                            <label>Activo:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@ProvinciaObtener.Activo" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Nombre:</label> 
                            <TelerikTextBox @bind-Value="@(ProvinciaObtener.Nombre)" Size="sm" Enabled="@false"/> 
                        </Template>
                    </FormItem> 
                    <FormItem>
                        <Template>
                            <label>Región (departamento):</label>
                            <div class="item-group">
                                <TelerikTextBox Enabled="@(false)" @bind-Value="@(ProvinciaObtener.CodigoRegion)" Size="sm" Width="100px" />
                                <TelerikTextBox @bind-Value="@(ProvinciaObtener.NombreRegion)" Title="@(ProvinciaObtener.NombreRegion)" Enabled="@(false)" Size="sm" />
                            </div>
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Latitud:</label>
                            <TelerikNumericTextBox Width="100px" Arrows="@(false)" @bind-Value="@(ProvinciaObtener.Latitud)" Format="N6" Decimals="6" Enabled="@(false)" Size="sm" />
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Longitud:</label>
                            <TelerikNumericTextBox Width="100px" Arrows="@(false)" @bind-Value="@(ProvinciaObtener.Longitud)" Format="N6" Decimals="6" Enabled="@(false)" Size="sm" />
                        </Template>
                    </FormItem>
                </FormItems>
                <FormButtons/>
            </TelerikForm>

            <TelerikToolBar Class="toolbar-mainform">
                <ToolBarTemplateItem>
                    <TelerikButton Icon="@(SvgIcon.Undo)" Id="tbtn" Title="Volver a la vista del listado" ButtonType="@ButtonType.Button" Size="sm" ThemeColor="primary" OnClick="@(Volver)">Volver</TelerikButton>
                </ToolBarTemplateItem>
                <ToolBarSeparator />
                <ToolBarTemplateItem>
                    <TelerikButton Icon="@(SvgIcon.HyperlinkOpen)" Id="tbtn" Title="Ir a ver lista de distritos por provincia" ButtonType="@ButtonType.Button" Class="b-primary btn-auth" Enabled="@(EsAsignadoVerDistrito)" Size="sm" OnClick="@(() => IrVerDistritos())">Ver distritos</TelerikButton>
                </ToolBarTemplateItem>
            </TelerikToolBar>

        </CardBody>
    </CardContainerComponent>
}