@page "/tipos-identificacion/{Id:guid}"

@attribute [Authorize] 

<PageTitle>Tipo Identificación - Ver</PageTitle>

<TooltipButtonComponent/>

@if (TipoIdentificacionObtener is not null)
{
    <CardContainerComponent Titulo="Visualizando tipo de identificación" CodigoRegistro="@(TipoIdentificacionObtener.Codigo)" CodigoServicio="@(codigoServicio)">
        <CardBody> 
            <TelerikForm Model="@TipoIdentificacionObtener" Size="sm"> 
                <FormItems>
                    <FormItem>
                        <Template>
                            <label>Activo:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@TipoIdentificacionObtener.Activo" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Nombre:</label> 
                            <TelerikTextBox @bind-Value="@(TipoIdentificacionObtener.Nombre)" Size="sm" Enabled="@false"/> 
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Sigla:</label>
                            <TelerikTextBox Width="100px" @bind-Value="@(TipoIdentificacionObtener.Sigla)" Size="sm" Enabled="@false" />
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Tipo de origen:</label>
                            <TelerikDropDownList Width="200px" @bind-Value="@(TipoIdentificacionObtener.FlagTipoOrigen)" TextField="Nombre" ValueField="Codigo" Data="@TiposOrigen" Enabled="@false" Size="sm" />
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Maneja ficha de la:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@TipoIdentificacionObtener.ManejaFichaSunat" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md" />
                        </Template>
                    </FormItem>
                </FormItems>
                <FormButtons/>
            </TelerikForm>

            <TelerikToolBar Class="toolbar-mainform">
                <ToolBarTemplateItem>
                    <TelerikButton Icon="@(SvgIcon.Undo)" Id="tbtn" Title="Volver a la vista del listado" ButtonType="@ButtonType.Button" Size="sm" ThemeColor="primary" OnClick="@(Volver)">Volver</TelerikButton>
                </ToolBarTemplateItem>
            </TelerikToolBar>

        </CardBody>
    </CardContainerComponent> 
}