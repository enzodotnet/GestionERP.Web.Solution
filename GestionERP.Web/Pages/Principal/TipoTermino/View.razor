@page "/tipos-termino/{Id:guid}"

@attribute [Authorize] 
<PageTitle>Tipo de término - Ver</PageTitle>

<TooltipButtonComponent/>

@if (TipoTerminoObtener is not null)
{
    <CardContainerComponent Titulo="Visualizando tipo de término" CodigoRegistro="@(TipoTerminoObtener.Codigo)" CodigoServicio="@(codigoServicio)">
        <CardBody> 
            <TelerikForm Model="@TipoTerminoObtener" Size="sm"> 
                <FormItems>
                    <FormItem>
                        <Template>
                            <label>Activo:</label>
                            <TelerikSwitch OnLabel="Sí" OffLabel="No" @bind-Value="@TipoTerminoObtener.Activo" Enabled="@false" Size="sm" TrackRounded="md" ThumbRounded="md"/>
                        </Template>
                    </FormItem>
                    <FormItem>
                        <Template>
                            <label>Nombre:</label> 
                            <TelerikTextBox @bind-Value="@(TipoTerminoObtener.Nombre)" Size="sm" Enabled="@false"/> 
                        </Template>
                    </FormItem>  
                    <FormItem>
                        <Template>
                            <label>Registro:</label>
                            <TelerikDropDownList Width="200px" @bind-Value="@(TipoTerminoObtener.FlagRegistro)" TextField="Nombre" ValueField="Codigo" Data="@Registros" Enabled="@false" Size="sm" />
                        </Template>
                    </FormItem> 
                </FormItems>
                <FormButtons/>
            </TelerikForm>

            <TelerikToolBar Class="toolbar-mainform">
                <ToolBarTemplateItem>
                    <TelerikButton Icon="@(SvgIcon.Undo)" Id="tbtn" Title="Volver a la vista del listado" ButtonType="@ButtonType.Button" Size="sm" ThemeColor="primary" OnClick="@(Volver)">Volver</TelerikButton>
                </ToolBarTemplateItem>
            </TelerikToolBar>

        </CardBody>
    </CardContainerComponent>
}